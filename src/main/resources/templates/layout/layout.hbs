<header>
    <!-- Fixed navbar -->
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">My Spring</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">홈</a>
                    </li>
                    {{#if (getIsLogin)}}
                        <li class="nav-item">
                            <a class="nav-link" href="/posts">게시판</a>
                        </li>
                    {{/if}}
                </ul>
                <div class="d-flex align-items-center">
                    {{#if (getIsLogin)}}
                        <span class="text-white">{{getLoginName}}님 환영합니다.</span>
                        <a class="btn btn-outline-light btn-sm mx-1" href="/signout">로그아웃</a>
                    {{else}}
                        <a class="btn btn-outline-light btn-sm mx-1" href="/signin">로그인</a>
                        <a class="btn btn-outline-light btn-sm mx-1" href="/signup">회원가입</a>
                    {{/if}}
                </div>
            </div>
        </div>
    </nav>
</header>